<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="newPostTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" id="newPostTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="newPostContent">Post</label>
        <textarea class="form-control" rows="5" name="postContent" id="newPostContent" autocomplete="off"></textarea>
    </div>
    <br>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer") -%>